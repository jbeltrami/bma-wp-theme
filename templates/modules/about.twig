{% if not item.thumbnail_description %}
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<h4>{{copy}}</h4>
			</div>
		</div>
	</div>

{% else %}
	<div class="container">
		<div class="row">
			<div class="col-lg-10">
				<h4>{{copy}}</h4>
			</div>

			<div class="col-lg-2">
				{% for thumb in item.thumbnail_description %}
					<figure>
						<img class="img-fluid" src="{{Image(thumb.thumbnail)}}" alt="{{thumb.thumbnail.alt}}">
						<figcaption>{{thumb.description}}</figcaption>
					</figure>
				{% endfor %}
			</div>
		</div>
	</div>
{% endif %}
