  <span class="line"></span>
</div>

<img
  class="logo"
  src="{{ theme.path }}/resources/assets/images/bma.svg"
  alt=""
/>

<nav class="navbar align-items-center">
  {% if menu %}
  <ul class="nav-items">
    {% for item in menu.items %}
    <li class="nav-item">
      <a
        target="{{ item.target }}"
        rel="noopener noreferrer"
        href="{{ item.link }}"
        >{{ item.title }}</a
      >
      {# {% include "menu.twig" with {'items': item.children} %} #}
    </li>
    {% endfor %}
  </ul>
  {% endif %}
</nav>
